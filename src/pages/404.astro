---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout title="Page not found">
	<div class="h-full grid place-items-center">
		<div>
			<h1 class="text-5xl leading-relaxed font-extrabold bg-clip-text text-transparent bg-gradient-to-tr from-blue-500 to-gray-200">404 - Page not found</h1>
			<p class="text-lg">The page you are looking for does not exist or was deleted.</p>
			<div class="flex justify-center mt-8">
				<a href="/" class="clean btn btn-primary">Go to Home</a>
			</div>
		</div>
	</div>
</BaseLayout>
