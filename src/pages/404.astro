---
import BaseLayout from "@layouts/BaseLayout.astro";
import Button from "@components/shared/Button.astro";
---

<BaseLayout title="Page not found">
	<div class="h-full flex justify-center text-center">
		<div class="my-10 mt-20 md:mt-56">
			<h1 class="text-6xl leading-relaxed font-extrabold text-blue-500">404 - Page not found</h1>
			<p class="text-lg">The page you are looking for does not exist or was deleted.</p>
			<div class="flex justify-center mt-8">
				<Button href="/" variant="primary">Go back Home</Button>
			</div>
		</div>
	</div>
</BaseLayout>
