---
import BaseLayout from "@layouts/BaseLayout.astro";
import Image from "astro/components/Image.astro";
import ProfilePicture from "@assets/images/profile.png";
import Button from "@components/Button.astro";

const CV_URL = "https://github.com/KanarekLife/CV/releases/latest/download/cv.pdf";
---

<BaseLayout>
	<section class="my-10 mt-20 md:mt-56 h-1/2 flex flex-col md:flex-row-reverse justify-between gap-8">
		<div class="flex justify-center items-center">
			<Image src={ProfilePicture} alt="Stanisław Nieradko" class="h-full w-auto max-h-64 md:max-h-64 lg:max-h-96 rounded-lg" />
		</div>
		<div class="flex flex-col justify-center">
			<h1 class="text-4xl md:text-5xl lg:text-6xl text-center md:text-left bold">Stanisław Nieradko</h1>
			<p class="text-lg text-center md:text-left text-gray-300">Backend Software Developer</p>
			<div class="flex gap-8 mt-16 md:mt-12 justify-center md:justify-normal">
				<Button href="/blog/" variant="primary">Checkout my blog</Button>
				<Button href={CV_URL} newTab>Download my CV</Button>
			</div>
		</div>
	</section>
</BaseLayout>
