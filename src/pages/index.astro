---
import BaseLayout from "@layouts/BaseLayout.astro";
import Image from "astro/components/Image.astro";
import ProfilePicture from "@assets/images/profile.png";
---

<BaseLayout>
	<div class="h-full flex flex-col justify-center">
		<section class="my-10 h-96 grid grid-cols-3">
			<div class="flex flex-col justify-center col-span-2">
				<h1 class="text-5xl bold">Stanisław Nieradko</h1>
				<p class="text-lg text-gray-300">Backend Software Developer</p>
				<div class="flex gap-4 mt-8">
					<a href="/blog/" class="clean btn btn-primary">Checkout my blog</a>
					<a href="/cv.pdf" target="_blank" class="clean btn">Download my CV</a>
				</div>
			</div>
			<div>
				<Image src={ProfilePicture} alt="Stanisław Nieradko" />
			</div>
		</section>
	</div>
</BaseLayout>
