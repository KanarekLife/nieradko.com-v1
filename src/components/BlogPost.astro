---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import dayjs from "dayjs";
import Link from "@components/Link.astro";
import CalendarIcon from "@assets/icons/calendar.svg?raw";
import UserIcon from "@assets/icons/user.svg?raw";

export interface Props {
	post: CollectionEntry<"blog">;
}

const { post } = Astro.props;

const url = `/blog/${post.slug}`;
const creationDate = dayjs(post.data.created);

const { Content } = await post.render();
---

<article>
	<header>
		<Link href="/blog/" color="white">&larr; Go back</Link>
        <div class="relative h-52">
            {post.data.image ? <Image class="object-cover object-center h-full" src={post.data.image.src} alt={post.data.image.alt} /> : null}
        </div>
		<div class="mt-4">
			<h1 class="text-4xl font-semibold mt-auto"><Link href={url} color="white">{post.data.title}</Link></h1>
			<div class="flex gap-4 text-gray-200 my-2">
				<p class="flex gap-2"><Fragment set:html={CalendarIcon} /><time datetime={creationDate.toISOString()}>{creationDate.format("DD.MM.YYYY")}</time></p>
				<p class="flex gap-2"><Fragment set:html={UserIcon} /><span>Stanis≈Çaw Nieradko</span></p>
			</div>
		</div>
	</header>
	<main class="mt-4 mb-8 content">
		<Content />
	</main>
	<footer>
		<Link href="/blog/" color="white">&larr; Go back</Link>
	</footer>
</article>

<style is:global>
    .content {
        @apply leading-5 flex flex-col gap-4;
    }

	.content h1 {
		@apply text-4xl font-semibold;
	}

	.content h2 {
		@apply text-3xl font-semibold;
	}

	.content h3 {
		@apply text-2xl font-semibold;
	}

	.content h4 {
		@apply text-xl font-semibold;
	}

	.content blockquote {
		@apply border-l-4 border-gray-200 pl-4 italic;
	}

	.content ul {
		@apply list-disc pl-4;
	}

	.content ol {
		@apply list-decimal pl-4;
	}

	.content a {
		@apply relative text-blue-300 group-hover:text-white before:absolute before:-z-10 before:inset-0 before:w-0 before:bg-blue-600 before:transition-all before:duration-200 before:ease-out hover:before:w-full hover:text-white;
	}

	.content pre {
		@apply px-2 py-2 my-1;
	}

    .content img {
        @apply mx-auto;
    }
</style>
